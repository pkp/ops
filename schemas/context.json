{
	"title": "Server",
	"description": "A server.",
	"properties": {
		"abbreviation": {
			"type": "string",
			"multilingual": true,
			"apiSummary": true,
			"validation": [
				"nullable"
			]
		},
		"enableAuthorScreening": {
			"type": "boolean",
			"default": 0,
			"validation": [
				"nullable"
			]
		},
		"enableOai": {
			"type": "boolean",
			"default": 1,
			"validation": [
				"nullable"
			]
		},
		"enablePublisherId": {
			"type": "array",
			"items": {
				"type": "string",
				"validation": [
					"in:publication,galley,issue,issueGalley"
				]
			}
		},
		"serverThumbnail": {
			"type": "object",
			"multilingual": true,
			"apiSummary": true,
			"validation": [
				"nullable"
			],
			"properties": {
				"temporaryFileId": {
					"type": "integer",
					"writeOnly": "true"
				},
				"name": {
					"type": "string"
				},
				"uploadName": {
					"type": "string"
				},
				"width": {
					"type": "integer"
				},
				"height": {
					"type": "integer"
				},
				"dateUploaded": {
					"type": "string",
					"validation": [
						"date_format:Y-m-d H:i:s"
					]
				},
				"altText": {
					"type": "string"
				}
			}
		},
		"sponsoringOrganization": {
			"type": "string",
			"validation": [
				"nullable"
			]
		}
	}
}
